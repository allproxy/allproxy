#!/usr/bin/env bash

BIN_DIR=$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)
SYMLINK=$(readlink "${BASH_SOURCE[0]}")
if [ ! -z "$SYMLINK" ]; then
  BIN_DIR=$BIN_DIR/$(dirname $SYMLINK)
fi

if [ -f "$BIN_DIR/../app.ts" ]; then
  DATA_DIR=$BIN_DIR/../
else
  DATA_DIR=$HOME/allproxy
fi

export NODE_ENV=production
export ALLPROXY_DATA_DIR=$DATA_DIR
if [ ! -d "$DATA_DIR" ]; then
  mkdir $DATA_DIR
fi

REPLACE_RESPONSES_DIR=$DATA_DIR/replace-responses
if [ ! -d "$REPLACE_RESPONSES_DIR" ]; then
  mkdir $REPLACE_RESPONSES_DIR
fi

PROTO_DIR=$DATA_DIR/replace-responses
if [ ! -d "$PROTO_DIR" ]; then
  mkdir $PROTO_DIR
fi

node $BIN_DIR/../build/app $@
